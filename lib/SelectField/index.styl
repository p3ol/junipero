@require "../theme/colors"

.junipero.select
  .dropdown-toggle
    position: relative

    .text-input input
      cursor: default

    .arrow
      position: absolute
      width: 10px
      height: 15px
      top: 50%
      right: 10px
      transform: translateY(-50%)
      pointer-events: none
      user-select: none

      &:before,
      &:after
        content: ''
        display: block
        position: relative
        width: 5px
        height: 5px
        left: 2px
        transform: rotate(45deg)
        border: 0px solid $color-shuttle-gray
        transition: border-color .1s ease-in-out

      &:before
        border-left-width: 2px
        border-top-width: 2px
        top: 1px

      &:after
        border-right-width: 2px
        border-bottom-width: 2px

  .no-items, .no-results
    padding: 10px
    color: $color-shuttle-gray
    text-align: center

  .search
    padding: 0 10px 10px

    .text-input
      min-width: auto
      width: 100%

  &.searching
    .search-results, .items
      opacity: .5

  &.focused
    .arrow
      &:before, &:after
        border-color: $color-eastern-blue
