{
  // Change this to match your project
  "include": ["packages/**/*"],
  "compilerOptions": {
    // Generate d.ts files
    "declaration": true,
    // go to js file when using IDE functions like
    // "Go to Definition" in VSCode
    "declarationMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest"],
    "lib": ["DOM", "ES2022"],
    "noImplicitAny": true,
    "noEmit": true,
    "paths": {
      "@junipero/core": ["./packages/core/lib/index.ts"],
      "@junipero/hooks": ["./packages/hooks/lib/index.ts"],
      "@junipero/transitions": ["./packages/transitions/lib/index.tsx"],
      "@junipero/react": ["./packages/react/lib/index.ts"],
      "~tests-utils": ["./packages/react/tests/utils.ts"],
    }
  },
  "exclude": [
    "**/node_modules/**/*", "**/dist/*", "./node_modules/**/*"
  ]
}
