{
  "include": ["packages/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest"],
    "lib": ["DOM", "ES2022"],
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noEmit": true,
    "paths": {
      "@junipero/core": ["./packages/core/lib/index.ts"],
      "@junipero/hooks": ["./packages/hooks/lib/index.ts"],
      "@junipero/transitions": ["./packages/transitions/lib/index.tsx"],
      "@junipero/react": ["./packages/react/lib/index.ts"],
      "@junipero/react-d3-plugin": ["./packages/react-d3-plugin/lib/index.ts"],
      "~tests-utils": ["./packages/react/tests/utils.ts"],
    }
  },
  "exclude": [
    "**/dist/*",
    "node_modules",
  ]
}
