@import "../utils/colors"

.junipero.junipero-modal
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 10050
  overflow: hidden

  &.opened
    display: block

  &.closed
    display: none

  .junipero-modal-wrapper
    width: 100%
    height: 100%
    position: absolute
    overflow: auto
    display: block
    padding: 50px
    z-index: 10052

    .junipero-modal-content
      width: 700px
      max-width: 100%
      background: $color-white
      min-height: 500px
      position: relative
      z-index: 10053
      border: none
      border-radius: 0
      margin: 0 auto
      padding: 20px

      a.junipero-modal-close
        display: inline-block
        vertical-align: middle
        width: 15px
        height: 15px
        position: absolute
        margin-left: 5px
        cursor: pointer
        top: 10px
        right: 10px

        &:before, &:after
          content: ''
          height: 100%
          position: absolute
          width: 2px
          background: $color-black
          left: calc(50% - 1px)
          top: 0

        &:before
          transform: rotate(45deg)

        &:after
          transform: rotate(-45deg)

  &.theme-none
    background: rgba($color-black, .9)

  &.theme-default
    background: rgba($color-midnight, .9)
