@import "../utils/vars"

.junipero.check-box

  label.check-wrapper
    display: flex
    flex-wrap: wrap
    justify-content: stretch

    .check-inner
      max-width: none
      width: auto
      flex: 0 0 auto

      input
        display: none

      .check
        width: 16px
        height: 16px
        border: 2px solid $color-eastern-blue
        border-radius: 2px
        line-height: 15px
        margin-top: 3px
        margin-right: 10px
        transition: background, transform
        transition-duration: $animation-duration-fast
        transition-timing-function: $animation-easing

        i.check-icon
          width: 100%
          height: 100%
          background: url(../images/check.svg) no-repeat
          background-size: contain
          background-position: center
          display: block
          position: relative
          top: -1px
          transform-origin: center

    .label
      max-width: 100%
      width: auto
      flex-grow: 1
      flex-basis: 0

  &.checked
    .check-inner
      .check
        background: $color-eastern-blue

        .check-icon
          animation: scaleUp $animation-duration $animation-easing

  &.active
    .check-inner
      .check
        transform: scale(0.9)

  &.disabled
    .check-inner
      opacity: .3

@keyframes scaleUp
  0%
    transform: scale(1)

  50%
    transform: scale(1.2)

  100%
    transform: scale(1)
