@import "../utils/colors"

.junipero.junipero-bread-crumb
  cursor: default

  span
    &:after
      content: ">"
      margin: 0 5px
      display: inline
      position: relative
      top: 1px

    &:last-child
      font-weight: bold

      &:after
        display: none

  &.theme-none
    span
      color: $color-shuttle-gray

      &:last-child
        color: $color-midnight

  &.theme-default
    span
      color: $color-midnight

      &:last-child
        color: $color-eastern-blue
