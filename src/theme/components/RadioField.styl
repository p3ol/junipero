@import "../utils/colors"

.junipero.junipero-radio-field

  ul
    list-style: none
    margin: 0
    padding: 0

  .radio-wrapper
    align-items: center
    color: $color-shuttle-gray
    cursor: pointer
    display: flex
    font-size: 14px
    margin: 10px 0

    input
      display: none

      &:checked + .check
        border: 2px solid $color-eastern-blue

      &:checked + .check::before
        background: $color-eastern-blue

      &:checked ~ span
        color: $color-shuttle-gray

    .check
      border-radius: 50%
      height: 21px
      position: relative
      transition: border .25s linear
      width: 21px

      &:before
        border-radius: 50%
        content: ''
        display: block
        height: 11px
        left: 3px
        position: relative
        top: 3px
        transition: background .25s linear
        width: 11px

    .label
      padding-left: 20px
      position: relative
  
  &.theme-none
    .radio-wrapper

      input
        display: none

        &:checked + .check
          border: 2px solid $color-shuttle-gray

        &:checked + .check::before
          background: $color-shuttle-gray

        &:checked ~ span
          color: $color-shuttle-gray

      .check
        border: 2px solid $color-alto

        &:hover
          border-color: $color-shuttle-gray

    &.disabled
      .check
        &, &:hover
          border-color: $color-alto

  &.theme-default
    .radio-wrapper

      input
        display: none

        &:checked + .check
          border: 2px solid $color-eastern-blue

        &:checked + .check::before
          background: $color-eastern-blue

        &:checked ~ span
          color: $color-shuttle-gray

      .check
        border: 2px solid $color-powder-blue

        &:hover 
          border-color: $color-eastern-blue

    &.disabled
      .check
        &, &:hover
          border-color: $color-powder-blue