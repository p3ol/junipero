@import "../utils/vars"

.junipero.junipero-field.date-field
  position: relative

  .field-wrapper
    cursor: default
    text-decoration: none

    &:after
      height: 2px

    .field-inner
      flex: 1

      .field
        color: $color-midnight

      .label
        transform: scale(.8) translateY(-25px)
        transition-duration: $animation-duration-fast

    .select-arrow
      flex: 0 0 30px
      height: 18px
      max-width: 30px
      position: relative
      z-index: 2

      i.select-arrow-icon
        background: url(../images/select-arrow.svg) no-repeat
        background-size: contain
        background-position: center
        display: block
        height: 14px
        margin: auto
        position: relative
        top: 1px
        width: 14px

  &.disabled
    .select-arrow
      opacity: .3

  &.boxed
    .field-wrapper
      .field-inner
        .label
          transform: scale(0.75) translateY(-13px)


