@import "../utils/vars"
@import "../utils/colors"

.junipero

  &.junipero-dropdown,
  &.junipero-dropdown-toggle
    display: inline-block

  &.junipero-dropdown-menu
    background: $color-white
    border-radius: 2px
    min-width: $default-width
    list-style: none
    padding: 10px 0
    margin-top: 10px
    max-height: 200px
    overflow: auto
    z-index: 1000
    text-align: left

    li.junipero-dropdown-item
      cursor: pointer

      a
        text-decoration: none
        padding: 5px 20px
        display: block

  &.opened
    &.junipero-dropdown-menu
      visibility: visible
      pointer-events: initial
      opacity: 1

  &.closed
    &.junipero-dropdown-menu
      visibility: hidden
      pointer-events: none
      opacity: 0

  &.theme-none
    &.junipero-dropdown-menu
      box-shadow: 0 2px 8px 0 rgba($color-shuttle-gray, 0.2)

      li.junipero-dropdown-item

        &:hover
          background: $color-alabaster

        a
          color: $color-shuttle-gray

  &.theme-default
    &.junipero-dropdown-menu
      box-shadow: 0 2px 8px 0 rgba($color-eastern-blue, 0.2)

      li.junipero-dropdown-item

        &:hover
          background: $color-black-squeeze

        a
          color: $color-eastern-blue
