@import "../utils/vars"
@import "../utils/colors"

$handle-size = 16px
$slide-size = 6px

.junipero.junipero-slider
  display: block
  min-width: $default-width
  cursor: default

  .slider-wrapper
    display: flex
    align-items: center
    justify-content: center

    .label, .slide, .value
      max-width: 100%
      width: auto
      display: block
      min-width: 100px

    .slide
      height: $slide-size
      width: unquote("calc(100% - ") $handle-size unquote(")")
      margin-top: ($slide-size / 2)
      position: relative

      .fill
        max-width: 100%
        height: 100%
        left: 0
        top: 0
        position: absolute
        z-index: 2

      .handle
        border-radius: 100%
        cursor: pointer
        height: $handle-size
        left: -($handle-size / 2)
        position: absolute
        top: -($handle-size / 2) + ($slide-size / 2)
        width: $handle-size
        z-index: 3

    .label
      padding-right: 20px
      font-weight: 600
      text-align: right

    .value
      padding-left: 20px
      color: $color-shuttle-gray
      font-weight: 600
      text-align: left

  &.disabled
    .slide
      opacity: .3

      .handle
        cursor: default

  &.theme-none
    .slide
      background: $color-alabaster

      .fill
        background: $color-shuttle-gray + 50

      .handle
        background: $color-shuttle-gray
        box-shadow: 0 0 4px rgba($color-black, .25)

    .label
      color: $color-shuttle-gray

  &.theme-default
    .slide
      background: $color-catskill-white

      .fill
        background: $color-atoll

      .handle
        background: $color-eastern-blue
        box-shadow: 0 0 4px rgba($color-midnight, .25)

    .label
      color: $color-eastern-blue
