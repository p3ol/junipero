@require "./theme/colors"
@require "./theme/fonts"
@require "./theme/vars"

.junipero
  font-family: "Open Sans", sans-serif
  font-size: 16px
  color: $color-midnight

  &, & *, & *:before, & *:after
    outline: none
    box-sizing: border-box

  --default-main-color: $color-alabaster
  --default-sub-color: $color-midnight
  --default-hover-color: $color-gallery
  --default-outline-color: $color-midnight
  --default-reversed-color: $color-midnight
  --default-active-color: $color-alto
  --default-disabled-color: $color-alabaster + 2
  --default-alternate-color: $color-alto
  --default-reversed-alternate-color: $color-alto
  --default-shadow-color: rgba($color-midnight, .2)
  --default-border-color: $color-gallery

  --primary-main-color: $color-eastern-blue
  --primary-sub-color: $color-white
  --primary-hover-color: $color-atoll
  --primary-outline-color: $color-eastern-blue
  --primary-reversed-color: $color-white
  --primary-active-color: $color-persian-green
  --primary-disabled-color: $color-powder-blue
  --primary-alternate-color: $color-white
  --primary-reversed-alternate-color: $color-powder-blue
  --primary-shadow-color: rgba($color-eastern-blue, .5)
  --primary-border-color: $color-eastern-blue

  --secondary-main-color: $color-portage
  --secondary-sub-color: $color-white
  --secondary-hover-color: $color-blue-violet
  --secondary-outline-color: $color-portage
  --secondary-reversed-color: $color-white
  --secondary-active-color: $color-portage
  --secondary-disabled-color: $color-moon-raker
  --secondary-alternate-color: $color-white
  --secondary-reversed-alternate-color: $color-moon-raker
  --secondary-shadow-color: rgba($color-portage, .5)
  --secondary-border-color: $color-portage

  --ternary-main-color: $color-persian-green
  --ternary-sub-color: $color-white
  --ternary-hover-color: $color-atoll
  --ternary-outline-color: $color-persian-green
  --ternary-reversed-color: $color-white
  --ternary-active-color: $color-persian-green
  --ternary-disabled-color: $color-powder-blue
  --ternary-alternate-color: $color-white
  --ternary-reversed-alternate-color: $color-powder-blue
  --ternary-shadow-color: rgba($color-persian-green, .5)
  --ternary-border-color: $color-persian-green

  --warning-main-color: $color-buttercup
  --warning-sub-color: $color-white
  --warning-hover-color: $color-buttercup - 10
  --warning-outline-color: $color-buttercup
  --warning-reversed-color: $color-white
  --warning-active-color: $color-buttercup - 20
  --warning-disabled-color: $color-disabled-buttercup
  --warning-alternate-color: $color-white
  --warning-reversed-alternate-color: $color-disabled-buttercup
  --warning-shadow-color: rgba($color-buttercup, .5)
  --warning-border-color: $color-buttercup

  --danger-main-color: $color-monza
  --danger-sub-color: $color-white
  --danger-hover-color: $color-monza - 10
  --danger-outline-color: $color-monza
  --danger-reversed-color: $color-white
  --danger-active-color: $color-monza - 20
  --danger-disabled-color: $color-disabled-monza
  --danger-alternate-color: $color-white
  --danger-reversed-alternate-color: $color-disabled-monza
  --danger-shadow-color: rgba($color-monza, .5)
  --danger-border-color: $color-monza

  --success-main-color: $color-java
  --success-sub-color: $color-white
  --success-hover-color: $color-java - 10
  --success-outline-color: $color-java
  --success-reversed-color: $color-white
  --success-active-color: $color-java - 20
  --success-disabled-color: $color-disabled-java
  --success-alternate-color: $color-white
  --success-reversed-alternate-color: $color-disabled-java
  --success-shadow-color: rgba($color-java, .5)
  --success-border-color: $color-java

  --light-main-color: $color-white

  --dark-main-color: $color-black
