@require "../theme/colors"

.junipero.card
  min-width: 400px
  padding: 30px 40px 40px 40px
  box-shadow: 0px 4px 30px -7px rgba(0, 10, 36, 0.1)
  border-radius: 10px


  .card-title
    font-size: 22px
    line-height: 38px
    margin-bottom: 20px

  .card-text
    font-size: 16px
    line-height: 32px

  .card-icon
    margin-bottom: 50px
    height: 50px
    width: 50px

  .card-illustration
    margin-bottom: 30px

  .card-form
    display: flex
    flex-direction: column

    > *
      margin-top: 30px
