@require "../theme/colors"

.junipero.radio

  label
    display: flex
    align-items: center

    &.checked
      .inner
        background: $color-eastern-blue
        transition: background .1s ease-out

    &:hover
      cursor pointer

    &:focus:not(.disabled)
      .inner
        box-shadow: 0 0 0 2px rgba($color-eastern-blue .5)

    .inner
      border: 2px solid $color-catskill-white
      background: $color-catskill-white
      width: 16px
      height: 16px
      border-radius: 50%

      &:before
        position: relative
        display: block
        content: ''
        width: 12px
        height: 12px
        border-radius: 50%
        transition: background .1s ease-out

    input
      display: none

    &.disabled
      pointer-events: none
      opacity: .5

    .label
      margin-left: 12px

      .description
        display: none

  &.boxed
    label
      border: 1px solid $color-catskill-white
      padding: 15px 20px
      border-radius: 4px
      margin-bottom: 10px

      &:last-child
        margin-bottom: 0

      &:focus:not(.disabled)
        .inner
          box-shadow: 0 0 0 2px rgba($color-eastern-blue .5)

      &.checked
        background: $color-black-squeeze
        border-color: $color-eastern-blue

      .label
        margin-left: 20px
        user-select: none

        .title
          font-size: $text-default-font-size
          line-height: $text-default-line-height

        .description
          display: block
          font-size: $text-extra-font-size
          line-height: $text-extra-line-height
