@require "../theme/colors"
@require "../theme/vars"

.junipero.radio
  --main-color: $color-eastern-blue
  --background-color: $color-catskill-white
  --shadow-color: rgba($color-eastern-blue .5)
  --active-color: $color-black-squeeze

  label
    display: flex
    align-items: center

    &.checked
      .inner
        background: var(--main-color)
        transition: background .1s ease-out

    &:hover
      cursor pointer

    &:focus:not(.disabled)
      .inner
        box-shadow: 0 0 0 2px var(--shadow-color)

    .inner
      border: 2px solid var(--background-color)
      background: var(--background-color)
      width: 16px
      height: 16px
      border-radius: 50%

      &:before
        position: relative
        display: block
        content: ''
        width: 12px
        height: 12px
        border-radius: 50%
        transition: background .1s ease-out

    input
      display: none

    &.disabled
      pointer-events: none
      opacity: .5

    .label
      margin-left: 12px

      .description
        display: none

  &.boxed
    label
      border: 1px solid var(--background-color)
      padding: 15px 20px
      border-radius: 4px
      margin-bottom: 10px

      &:last-child
        margin-bottom: 0

      &:focus:not(.disabled)
        .inner
          box-shadow: 0 0 0 2px var(--shadow-color)

      &.checked
        background: var(--active-color)
        border-color: var(--main-color)

      .label
        margin-left: 20px
        user-select: none

        .title
          font-size: $text-default-font-size
          line-height: $text-default-line-height

        .description
          display: block
          font-size: $text-extra-font-size
          line-height: $text-extra-line-height
