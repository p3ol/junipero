@require "../theme/colors"

.junipero.tag
  border-radius: 4px
  font-size: 10px
  font-weight: 700
  line-height: 16px
  padding: 2px 7px
  background: $color-alto

  &.primary
    background: $color-eastern-blue
    color: $color-white

  &.secondary
    background: $color-portage
    color: $color-white

  &.premium
    background: $color-persian-green
    color: $color-white

  &.danger
    background: $color-buttercup
    color: $color-white

  &.warning
    background: $color-monza
    color: $color-white

  &.success
    background: $color-java
    color: $color-white
