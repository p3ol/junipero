@require "../theme/colors"

.junipero.tag
  align-items: center
  border-radius: 4px
  font-size: 10px
  font-weight: 600
  line-height: 16px
  padding: 2px 7px
  background: $color-alto

  //Primary
  &.primary
    background: $color-eastern-blue
    color: $color-white

  //Secondary
  &.secondary
    background: $color-persian-green
    color: $color-white

  //Ternary
  &.ternary
    background: $color-portage
    color: $color-white

  //Primary
  &.danger
    background: $color-buttercup
    color: $color-white

  //Primary
  &.warning
    background: $color-monza
    color: $color-white

  //Primary
  &.success
    background: $color-java
    color: $color-white
