@require "../theme/colors"

.junipero.touchable-zone
  cursor: pointer
  border-radius: 4px
  background-color: $color-alabaster
  color: $color-shuttle-gray
  display: inline-block
  width: 350px
  height: 130px
  user-select: none

  &:hover
    background-color: $color-gallery

    &:active
      background-color: $color-alto

  .content
    display: flex
    width: 100%
    height: 100%
    align-items: center
    justify-content: center

  .icon,
  .material-icons
    font-size: 24px
