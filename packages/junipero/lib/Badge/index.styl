@require "../theme/colors"

.junipero.badge
  background: $color-alto
  border-radius: 10px
  font-weight: 700
  display: inline-block
  font-size: 10px
  text-align: center
  height: 20px
  line-height: 20px
  min-width: 20px
  padding: 0 4px

  &.primary
    background: $color-eastern-blue
    color: $color-white

  &.secondary
    background: $color-portage
    color: $color-white

  &.premium
    background: $color-persian-green
    color: $color-white

  &.warning
    background: $color-buttercup
    color: $color-white

  &.danger
    background: $color-monza
    color: $color-white

  &.success
    background: $color-java
    color: $color-white
