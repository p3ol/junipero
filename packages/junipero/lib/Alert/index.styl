@require "../theme/colors"

.junipero.alert
  display: flex
  width: auto
  min-width: 500px
  position: relative
  overflow: hidden
  border-radius: 10px
  box-shadow: 0 4px 30px -7px rgba($color-midnight, 0.1)

  .border
    flex: 0 1 75px
    width: 75px
    margin-right: 14px
    min-width: 75px

    .icon
      width: 100%
      height: 100%
      display: flex
      align-items: center
      justify-content: center
      font-size: 35px
      background-color: $color-shuttle-gray
      color: $color-white

  .content
    flex: 1 1 auto
    width: auto
    padding: 10px 0

    .title
      margin: 0
      color: $color-midnight

    .text
      color: $color-shuttle-gray

  .close
    color: $color-shuttle-gray
    position: absolute
    font-size: 20px
    line-height: 20px
    right: 10px
    top: 10px
    z-index: 1

    &:hover
      cursor: pointer

  // Sizes
  &.compact
    .border
      display: flex
      flex: 0 0 auto
      width: auto
      margin-right: 0
      min-width: 0

      &:before
        content: ''
        width: 15px
        height: 100%
        background: $color-shuttle-gray
        flex: 0 0 15px

      .icon
        flex: 1 0 auto
        width: auto
        padding: 0 25px
        background: transparent
        color: $color-shuttle-gray

  // Colors
  &.success
    .title
      color: $color-blue-chill

    .icon
      background: $color-blue-chill
      color: $color-white

    &.compact
      .border:before
        background: $color-blue-chill

      .icon
        color: $color-blue-chill

  &.warning
    .title
      color: $color-buttercup

    .icon
      background: $color-buttercup
      color: $color-white

    &.compact
      .border:before
        background: $color-buttercup

      .icon
        color: $color-buttercup

  &.danger
    .title
      color: $color-monza

    .icon
      background: $color-monza
      color: $color-white

    &.compact
      .border:before
        background: $color-monza

      .icon
        color: $color-monza
