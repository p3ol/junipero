@require "../theme/colors"

.junipero.slider
  --main-color: $color-eastern-blue
  --background-color: $color-black-squeeze
  --shadow-color: rgba($color-eastern-blue, .25)

  display: inline-block
  width: auto
  min-width: 250px
  position: relative
  padding: 0 8px

  .slide
    width: calc(100% - 16px)
    position: absolute
    height: 16px
    overflow: visible
    left: 8px
    top: 0

    &:after
      content: ''
      width: 100%
      height: 2px
      top: calc(50% - 1px)
      background: var(--background-color)
      display: block
      position: absolute
      left: 0
      z-index: 1

  .fill
    height: 2px
    background: var(--main-color)
    position: absolute
    left: 0
    top: calc(50% - 1px)
    z-index: 2
    max-width: 100%

  .handle
    width: 16px
    height: 16px
    background: $color-white
    box-shadow: 0 0 8px 0 rgba($color-shuttle-gray, .3)
    border-radius: 50%
    position: relative
    z-index: 3
    left: -8px
    transition: box-shadow .1s ease-in-out
    cursor: grab

    &.moving
      cursor: grabbing

    &:focus
      box-shadow: 0 0 0 3px var(--shadow-color),
                  0 0 8px 0 rgba($color-shuttle-gray, .3)
