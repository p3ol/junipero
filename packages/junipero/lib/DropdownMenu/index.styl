@require "../theme/colors"

.junipero.dropdown-menu
  --shadow-color: rgba($color-eastern-blue, 0.2)

  position: absolute
  z-index: 1

  .menu-inner
    background: $color-white
    min-width: 250px
    border-radius: 4px
    box-shadow: 0 2px 8px 0 var(--shadow-color)
    padding: 10px 0
    list-style: none
    margin: 0

  &.apparition-css
    visibility: hidden
    pointer-events: none
    opacity: 0

    &.opened
      visibility: visible
      pointer-events: initial
      opacity: 1
