@require "../theme/colors"

.junipero.date-picker
  --main-color: $color-eastern-blue
  --sub-color: $color-shuttle-gray

  display: inline-block
  min-width: 250px

  .dropdown
    display: block
    width: 100%

  .dropdown-menu
    width: 250px

  .dropdown-toggle
    position: relative
    display: block

    .base
      cursor: default

    .arrow
      position: absolute
      width: 10px
      height: 15px
      top: 50%
      right: 10px
      transform: translateY(-50%)
      pointer-events: none
      user-select: none

      &:before,
      &:after
        content: ''
        display: block
        position: relative
        width: 7px
        height: 7px
        left: 2px
        transform: rotate(45deg)
        border: 0px solid var(--sub-color)
        transition: border-color .1s ease-in-out

      &:before
        border-left-width: 2px
        border-top-width: 2px
        top: 1px

      &:after
        border-right-width: 2px
        border-bottom-width: 2px

  .calendar
    line-height: normal

    .calendar-header
      display: flex
      align-items: center
      justify-content: space-between
      margin-bottom: 10px

      .arrow-wrapper
        max-width: 100%
        width: auto
        display: block
        padding: 0 15px
        min-width: 0
        cursor: pointer

        .arrow
          border-style: solid
          display: inline-block
          height: 9px
          margin-left: 3px
          margin-right: 3px
          transform: rotate(-135deg)
          width: 9px

        &.left
          .arrow
            border-width: 2px 2px 0 0

        &.right
          .arrow
            border-width: 0 0 2px 2px

      .current-month
        padding: 5px
        color: $color-midnight

    .calendar-body
      padding: 0 15px
      font-size: 12px

      .week-days
        display: flex
        align-items: center
        justify-content: space-between
        font-weight: bold

        .week-day
          text-align: center
          min-width: 30px

      .days
        display: flex
        align-items: center
        justify-content: space-around
        flex-wrap: wrap

        .day
          min-width: 30px
          display: inline-block
          text-align: center
          padding: 5px 0
          border-radius: 4px
          text-decoration: none
          cursor: pointer

          &.inactive
            color: $color-pale-sky
            opacity: .5

          &.active
            color: $color-white

          &.disabled, &.inactive.disabled
            opacity: .2
            pointer-events: none

        .separator
          width: 100%
          min-width: 100%

    .arrow, .week-days
      color: var(--main-color)

    .day
      color: $color-midnight

      &:hover
        background: $color-catskill-white

      &.active
        background: var(--main-color)

  &.focused
    .arrow
      &:before, &:after
        border-color: var(--main-color)

  &.disabled
    .arrow
      &:before, &:after
        border-color: var(--sub-color)

    .junipero.base.empty
      .label
        opacity: 0
