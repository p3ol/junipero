@require "../theme/colors"

.junipero.tabs
  .titles
    list-style: none
    display: flex
    padding: 0
    margin: 0
    align-items: center
    justify-content: flex-start

    li
      flex: 0 0 auto
      padding-right: 20px
      position: relative
      display: block

      &:after
        content: ''
        position: absolute
        width: 100%
        height: 2px
        background: $color-gallery
        bottom: -1px
        z-index: 1
        left: 0

      &:first-child
        padding-left: 20px

        &:after
          border-radius: 2px 0 0 2px

      &:last-child
        &:after
          border-radius: 0 2px 2px 0

      a
        color: $color-shuttle-gray
        text-decoration: none
        position: relative
        display: block
        padding: 0 0 8px

        &:after
          content: ''
          position: absolute
          left: 0
          width: 100%
          height: 2px
          background: $color-shuttle-gray
          border-radius: 2px
          bottom: -1px
          opacity: 0
          z-index: 2

        &:hover
          color: $color-shuttle-gray

          &:after
            opacity: 1

      &.active
        a
          color: $color-eastern-blue
          pointer-events: none
          user-select: none

          &:after
            background: $color-eastern-blue
            opacity: 1

  .content
    padding: 20px
