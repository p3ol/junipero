@require "../theme/colors"

.junipero.tabs
  --main-color: $color-eastern-blue
  --text-color: $color-shuttle-gray
  --background-color: $color-gallery

  .titles
    list-style: none
    display: flex
    padding: 0
    margin: 0
    align-items: center
    justify-content: flex-start

    li
      flex: 0 0 auto
      padding-right: 20px
      position: relative
      display: block

      &:after
        content: ''
        position: absolute
        width: 100%
        height: 2px
        background: var(--background-color)
        bottom: -1px
        z-index: 1
        left: 0

      &:first-child
        padding-left: 20px

        &:after
          border-radius: 2px 0 0 2px

      &:last-child
        &:after
          border-radius: 0 2px 2px 0

      a
        color: var(--text-color)
        text-decoration: none
        position: relative
        display: block
        padding: 0 0 8px

        &:after
          content: ''
          position: absolute
          left: 0
          width: 100%
          height: 2px
          background: var(--text-color)
          border-radius: 2px
          bottom: -1px
          opacity: 0
          z-index: 2

        &:hover
          color: var(--text-color)

          &:after
            opacity: 1

      &.active
        a
          color: var(--main-color)
          pointer-events: none
          user-select: none

          &:after
            background: var(--main-color)
            opacity: 1

  & > .content
    padding: 20px
