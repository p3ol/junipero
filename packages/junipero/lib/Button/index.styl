@require "../theme/colors"

.junipero.button
  --main-color: var(--default-main-color)
  --sub-color: var(--default-sub-color)
  --hover-color: var(--default-hover-color)
  --outline-color: var(--default-outline-color)
  --reversed-color: var(--default-reversed-color)
  --active-color: var(--default-active-color)
  --disabled-color: var(--default-disabled-color)
  --alternate-color: var(--default-alternate-color)
  --reversed-alternate-color: var(--default-reversed-alternate-color)
  --shadow-color: var(--default-shadow-color)
  --border-color: var(--default-border-color)

  padding: 8px 20px
  font-weight: bold
  background: var(--main-color)
  color: var(--sub-color)
  border-radius: 4px
  appearance: none
  border: none
  transition-property: box-shadow, background, color
  transition-duration: .1s
  transition-timing-function: ease-in-out
  outline: none
  line-height: normal

  // Default
  &:hover
    background: var(--hover-color)

  &:focus
    box-shadow: 0 0 0 2px var(--shadow-color)

  &:active
    background: var(--active-color)

  &:disabled
    background: var(--disabled-color)
    color: var(--alternate-color)

  &.outline
    background: transparent
    color: var(--outline-color)
    box-shadow: 0 0 0 1px var(--border-color)

    &:hover
      background: var(--hover-color)
      color: var(--reversed-color)
      box-shadow: 0 0 0 1px var(--hover-color)

      &:focus
        box-shadow: 0 0 0 1px var(--hover-color),
                    0 0 0 3px var(--shadow-color)

    &:focus
      box-shadow: 0 0 0 1px var(--border-color),
                  0 0 0 3px var(--shadow-color)

    &:active
      background: var(--active-color)
      color: var(--sub-color)

      &:focus
        box-shadow: 0 0 0 1px var(--active-color),
                    0 0 0 3px var(--shadow-color)

    &:disabled
      &, &:hover, &:active, &:focus
        background: transparent
        box-shadow: 0 0 0 1px var(--disabled-color)
        color: var(--reversed-alternate-color)

  for type in (primary secondary ternary success warning danger)
    &.{type}
      for color in (main sub hover outline reversed active disabled alternate reversed-alternate shadow border)
        {'--' + color}-color: "var(--%s-%s-color)" % (type color)

  .icon,
  .material-icons
    font-size: 18px
    vertical-align: middle
    position: relative
    top: -1px

  &.small
    padding: 5px 15px
    font-size: 14px

    .icon,
    .material-icons
      font-size: 24px

  &.big
    padding: 10px 25px
    font-size: 20px
