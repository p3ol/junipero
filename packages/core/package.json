{
  "name": "@junipero/core",
  "version": "3.11.0",
  "description": "üèî Junipero Design System Core Utils",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/p3ol/junipero.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "author": "Ugo Stephant <ugo@poool.fr>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "clean": "rm -rf ./dist || true",
    "build": "yarn clean && yarn build:code && yarn build:dts",
    "build:code": "yarn run -T tsdown",
    "build:dts": "yarn run -T tsc --project ./tsconfig.build.json",
    "test": "yarn run -T vitest run --coverage"
  },
  "publishConfig": {
    "access": "public"
  },
  "targets": [
    "chrome109",
    "edge138",
    "firefox140",
    "safari18",
    "opera80",
    "node20"
  ]
}
