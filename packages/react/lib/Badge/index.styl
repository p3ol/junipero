@require "../theme/colors"

.junipero.badge
  --main-color: var(--default-main-color)
  --sub-color: var(--default-sub-color)

  background: var(--main-color)
  color: var(--sub-color)
  border-radius: 10px
  font-weight: 700
  display: inline-block
  font-size: 10px
  text-align: center
  height: 20px
  line-height: 20px
  min-width: 20px
  padding: 0 4px

  for type in (primary secondary ternary warning danger success)
    &.{type}
      for color in (main sub)
        {'--' + color}-color: "var(--%s-%s-color)" % (type color)
