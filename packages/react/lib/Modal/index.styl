@require '../theme/colors'

.junipero.modal
  --background-color: rgba($color-midnight, .9)

  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  overflow: auto
  display: block

  &.apparition-css
    display: none

    &.opened
      display: block

  & > .wrapper
    width: 100%
    height: 100%
    position: absolute
    z-index: 2
    padding: 50px
    background: var(--background-color)
    overflow: auto
    display: flex
    align-items: center
    justify-content: center

    & > .content
      width: 700px
      max-width: 100%
      background: $color-white
      min-height: 500px
      position: relative
      z-index: 3
      border: none
      border-radius: 4px
      margin: 0 auto
      padding: 20px

      & > a.close
        display: inline-block
        width: 15px
        height: 15px
        position: absolute
        cursor: pointer
        top: 10px
        right: 10px

        &:before, &:after
          content: ''
          height: 100%
          position: absolute
          width: 2px
          background: $color-shuttle-gray
          left: calc(50% - 1px)
          top: 0

        &:before
          transform: rotate(45deg)

        &:after
          transform: rotate(-45deg)

  &.panel
    & > .wrapper
      padding: 0
      justify-content: flex-end
      overflow: hidden

      & > .content
        height: 100%
        overflow: auto
        margin: 0
        border-radius: 0
