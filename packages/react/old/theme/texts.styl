@require "./vars"

.junipero.text
  font-size: $text-default-font-size
  line-height: $text-default-line-height

  &.xs
    font-size: $text-default-font-size-xs
    line-height: $text-default-line-height-xs

  &.secondary
    font-size: $text-secondary-font-size
    line-height: $text-secondary-line-height

    &.xs
      font-size: $text-secondary-font-size-xs
      line-height: $text-secondary-line-height-xs

  &.extra
    font-size: $text-extra-font-size
    line-height: $text-extra-line-height

    &.xs
      font-size: $text-extra-font-size-xs
      line-height: $text-extra-line-height-xs
