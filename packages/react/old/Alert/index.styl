@require "../theme/colors"

.junipero.alert
  --main-color: $color-shuttle-gray

  display: flex
  width: auto
  min-width: 500px
  position: relative
  overflow: hidden
  border-radius: 10px
  box-shadow: 0 4px 30px -7px rgba($color-midnight, 0.1)

  .border
    flex: 0 1 75px
    width: 75px
    margin-right: 14px
    min-width: 75px

    .icon
      width: 100%
      height: 100%
      display: flex
      align-items: center
      justify-content: center
      font-size: 35px
      background-color: var(--main-color)
      color: $color-white

  .content
    flex: 1 1 auto
    width: auto
    padding: 10px 0

    .title
      margin: 0
      color: var(--main-color)

    .text
      color: $color-midnight

  .close
    color: $color-shuttle-gray
    position: absolute
    font-size: 20px
    line-height: 20px
    right: 10px
    top: 10px
    z-index: 1

    &:hover
      cursor: pointer

  // Sizes
  &.compact
    .border
      display: flex
      flex: 0 0 auto
      width: auto
      margin-right: 0
      min-width: 0

      &:before
        content: ''
        width: 15px
        height: 100%
        background: var(--main-color)
        flex: 0 0 15px

      .icon
        flex: 1 0 auto
        width: auto
        padding: 0 25px
        background: transparent
        color: var(--main-color)

  for type in (primary secondary ternary success warning danger)
    &.{type}
      --main-color: "var(--%s-main-color)" % type
