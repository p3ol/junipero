{
  "name": "@junipero/tailwind-plugin",
  "version": "3.12.3",
  "description": "üèî Junipero Design System Tailwind Plugin",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/p3ol/junipero.git",
    "directory": "packages/tailwind-plugin"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "author": "Ugo Stephant <ugo@poool.fr>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">= 20"
  },
  "peerDependencies": {
    "@junipero/core": "^3.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@junipero/core": "workspace:*"
  },
  "scripts": {
    "clean": "rm -rf ./dist || true",
    "build": "yarn clean && yarn build:code && yarn build:dts",
    "build:code": "yarn run -T tsdown",
    "build:dts": "yarn run -T tsc --project ./tsconfig.build.json",
    "test": "jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "targets": [
    "node20"
  ]
}
