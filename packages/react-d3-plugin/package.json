{
  "name": "@junipero/react-d3-plugin",
  "version": "3.12.11",
  "description": "üèî Junipero Design System D3 Components for React",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/p3ol/junipero.git",
    "directory": "packages/react-d3-plugin"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "author": "Ugo Stephant <ugo@poool.fr>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">= 20"
  },
  "peerDependencies": {
    "@junipero/react": "^3.2.0",
    "@junipero/theme": "^3.2.0",
    "d3": "^7.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@junipero/react": "workspace:*",
    "@junipero/theme": "workspace:*"
  },
  "scripts": {
    "clean": "rm -rf ./dist || true",
    "build": "yarn clean && yarn build:code && yarn build:dts",
    "build:code": "yarn run -T tsdown",
    "build:dts": "yarn run -T tsc --project ./tsconfig.build.json",
    "test": "jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "targets": [
    "chrome109",
    "edge138",
    "firefox140",
    "safari18",
    "opera80",
    "node20"
  ]
}
